{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"env/*": [".env.*"]
		},
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"importHelpers": true,
		"allowSyntheticDefaultImports": true,
		"useDefineForClassFields": true,
		"resolveJsonModule": true,
		"lib": [
			"esnext",
			"dom"
		],
		"types": [
			"@dcloudio/types",
			"vite/client",
			"@types/node",
			"@types/webpack-env",
			"@types/dotenv"
		]
	},
	"exclude": [
		"node_modules",
		"unpackage",
		"src/**/*.nvue"
	]
}
